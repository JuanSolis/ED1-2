@model IEnumerable<ecommerceED1_2.Models.Farmacos>
@{
    ViewBag.Title = "Farmacos";
}

<style>
    input {
        text-align: center;
    }
</style>



<div class="container  mt-4">

    <div class="row">
        <h4>Lista de Farmacos</h4>

        <div class="table-responsive">

            <table class="table">

                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.id)</th>
                        <th> @Html.DisplayNameFor(model => model.nombreFarmaco)</th>
                        <th> @Html.DisplayNameFor(model => model.descripcionFarmaco)</th>
                        <th> @Html.DisplayNameFor(model => model.casaProductora)</th>
                        <th> @Html.DisplayNameFor(model => model.precio)</th>
                        <th> @Html.DisplayNameFor(model => model.existencia)</th>
                        <th>Cantidad Deseada</th>
                        <th>Agregar a Pedido</th>
                        <th>Inventario</th>
                    </tr>

                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="@(item.existencia > 0 ? "text-center table-secondary" : "text-center table-danger")">
                            <td class="">
                                @item.id
                            </td>
                            <td>
                                @item.nombreFarmaco
                            </td>
                            <td>
                                @item.descripcionFarmaco
                            </td>
                            <td>
                                @item.casaProductora
                            </td>
                            <td>
                                @item.precio
                            </td>
                            <td class="">
                                <label> @item.existencia </label>
                            </td>
                            <form method="post" action="/Home/Farmacos/@item.id">
                                <td>
                                    <input type="number" class="form-control form-control-sm" name="CantidadFarmaco_@item.id" value="0" min="0" max="@Html.DisplayFor(modelItem => item.existencia)">
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="add">

                                        <button class="btn btn-success btn-xs" @(item.existencia <= 0 ? "disabled" : "") type="submit">
                                            <i class="fas fa-plus"></i>
                                        </button>

                                    </p>
                                </td>
                            </form>

                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <a href="/Home/EditFarmacos/@item.id">
                                        <button class="btn btn-primary btn-xs" @(item.existencia != 0 ? "disabled" : "") type="submit">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                    </a>

                                </p>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
