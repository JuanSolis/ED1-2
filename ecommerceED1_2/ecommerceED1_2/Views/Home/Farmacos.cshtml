@model IEnumerable<ecommerceED1_2.Models.Farmacos>
@{
    ViewBag.Title = "Farmacos";
}

<style>
    input {
        text-align: center;
    }
</style>
<script>
    $(document).ready(function () {
        $('#qty_input').prop('disabled', true);
        $('#plus-btn').click(function () {
            $('#qty_input').val(parseInt($('#qty_input').val()) + 1);
        });
        $('#minus-btn').click(function () {
            $('#qty_input').val(parseInt($('#qty_input').val()) - 1);
            if ($('#qty_input').val() == 0) {
                $('#qty_input').val(1);
            }

        });
    });
</script>


<div class="container  mt-4">

    <div class="row">
        <h4>Lista de Farmacos</h4>

        <div class="table-responsive">

            <table class="table">

                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.id)</th>
                        <th> @Html.DisplayNameFor(model => model.nombreFarmaco)</th>
                        <th> @Html.DisplayNameFor(model => model.descripcionFarmaco)</th>
                        <th> @Html.DisplayNameFor(model => model.casaProductora)</th>
                        <th> @Html.DisplayNameFor(model => model.precio)</th>
                        <th> @Html.DisplayNameFor(model => model.existencia)</th>
                        <th>Cantidad Deseada</th>
                        <th>Agregar a Pedido</th>
                        <th>Inventario</th>
                    </tr>

                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="@(item.existencia > 0 ? "table-secondary" : "table-danger")">
                            <td class="">
                                @item.id
                            </td>
                            <td>
                                @item.nombreFarmaco
                            </td>
                            <td>
                                @item.descripcionFarmaco
                            </td>
                            <td>
                                @item.casaProductora
                            </td>
                            <td>
                                @item.precio
                            </td>
                            <td>
                                @item.existencia
                            </td>
                            <form method="post" action="/Home/Farmacos/@item.id">
                                <td>
                                    <input type="number" id="ty_input" class="form-control form-control-sm" name="CantidadFarmaco_@item.id" value="0" min="0" max="@Html.DisplayFor(modelItem => item.existencia)">
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Edit">

                                        <button class="btn btn-success btn-xs" @(item.existencia == 0 ? "disabled" : "") type="submit">
                                            <i class="fas fa-plus"></i>
                                        </button>

                                    </p>
                                </td>
                            </form>

                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                </p>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
